# $HOME/.gitconfig
[core]
    editor = vim
    autocrlf = input
    filemode = false
	excludesfile = ~/.config/git/ignore
[user]
    name = Christopher Bocardo
    email = 97636+ccb012100@users.noreply.github.com
[gpg]
    program = gpg
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[commit]
    # gpgsign = true # TODO: use ssh signin
	verbose = true
[pull]
    ff = only
    rebase = true
[push]
	default = simple
[fetch]
    prune = true
[rebase]
    autoStash = false
[init]
	defaultBranch = main
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager-core
	credentialStore = gpg
[include]
    path = .config/git/aliases.gitconfig
    path = .config/git/github.gitconfig
    path = .config/git/tools.gitconfig
